@page
@model ddfgroup.Areas.Admin.Pages.ExchangeRate.EditModel

@{
    ViewData["Title"] = "Update Rate";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="main ">
    <partial name="_AdminPartialTopNav" />

    <div class="main-body">

        <div class="padding-left"><h3>@ViewData["Title"]</h3></div>

        <div class="row">

            <div class="col-12 col-xl-12 ">

                <div class="heads-padding text-right">
                    <a asp-page="Create" class="btn btn-success btn-sm"> Add New Rate</a>
                </div>
            </div>

            <div class="row ds-content">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Currency.BaseCurrency" class="control-label"></label>
                            <select asp-for="Currency.BaseCurrency" class="custom-select my-1 mr-sm-12" id="inlineFormCustomSelectPref" asp-items="ViewBag.Country">
                                <option value=""> Select Base Country</option>
                            </select>
                            <span asp-validation-for="Currency.BaseCurrency" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Currency.BaseAmount" class="control-label"></label>
                            <input asp-for="Currency.BaseAmount" class="form-control" id="base_amount" />
                            <span asp-validation-for="Currency.BaseAmount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Currency.ExchangeCurrency" class="control-label"></label>
                            <select asp-for="Currency.ExchangeCurrency" class="custom-select my-1 mr-sm-12" id="inlineFormCustomSelectPref" asp-items="ViewBag.Rate">
                                <option>Select Exchange Country</option>
                            </select>
                            <span asp-validation-for="Currency.ExchangeCurrency" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Currency.ExchnageRateAmount" class="control-label"></label>
                            <input asp-for="Currency.ExchnageRateAmount" class="form-control" />
                            <span asp-validation-for="Currency.ExchnageRateAmount" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Currency.CurrencyId" />
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
