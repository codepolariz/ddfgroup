@page
@model ddfgroup.Areas.Admin.Pages.AutoModels.IndexModel

@{
    ViewData["Title"] = "Manage Auto Models";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="main">

    <partial name="_AdminPartialTopNav" />

    <div class="padding-left"><h3>@ViewData["Title"]</h3></div>

    <div class="row">

        <div class="col-12 col-xl-12 pad-grid">

            <div class="heads-padding text-right">
                <a asp-page="Create" asp-route-id="" class="btn btn-info btn-sm"> Add New Model</a>
            </div>

            <table class="table table-striped table-bordered" id="RsTable">

                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CarsModel[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CarsModel[0].Year)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CarsModel[0].Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CarsModel[0].Brands)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CarsModel)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Brands.Name)
                        </td>
                        <td>
                            <a class="btn btn-outline-info btn-sm" asp-page="./Edit" asp-route-id="@item.CarsModelId">Edit</a>

                            <a class="btn btn-outline-danger btn-sm" asp-page="./Delete" asp-route-id="@item.CarsModelId">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
