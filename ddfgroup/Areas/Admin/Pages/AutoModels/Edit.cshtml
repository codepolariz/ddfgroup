@page
@model ddfgroup.Areas.Admin.Pages.AutoModels.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="main">

    <partial name="_AdminPartialTopNav" />

    <div class="padding-left"><h3>@ViewData["Title"]</h3></div>

    <div class="row">

        <div class="col-12 col-xl-12 pad-grid">

            <div class="heads-padding text-right">
                <a asp-page="Index" asp-route-id="" class="btn btn-info btn-sm"> Manage Auto Models</a>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CarsModel.Id" />
                <div class="form-group">
                    <label asp-for="CarsModel.Name" class="control-label"></label>
                    <input asp-for="CarsModel.Name" class="form-control" />
                    <span asp-validation-for="CarsModel.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarsModel.Date" class="control-label"></label>
                    <input asp-for="CarsModel.Date" class="form-control" />
                    <span asp-validation-for="CarsModel.Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarsModel.BrandsId" class="control-label"></label>
                    <select asp-for="CarsModel.BrandsId" class="form-control" asp-items="ViewBag.BrandsId"></select>
                    <span asp-validation-for="CarsModel.BrandsId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
