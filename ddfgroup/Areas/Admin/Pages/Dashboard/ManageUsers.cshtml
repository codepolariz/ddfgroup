@page
@model ddfgroup.Areas.Admin.Pages.Dashboard.ManageUsersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Users Management";
}
<div class="main">

    <partial name="_AdminPartialTopNav" />

    <h3>@ViewData["Title"]</h3>

    <div class="row">

        <div class="col-12 col-xl-12 pad-grid">

            <table class="table table-striped table-bordered" id="RsTable">
                <thead>
                    <tr>
                        <th style="width:15%;">First Name</th>
                        <th style="width:15%">Last Name</th>
                        <th style="width:25%">Mobile Number</th>
                        <th class="d-none d-md-table-cell" style="width:25%">Email Address</th>
                        <th width="15%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.PhoneNumber</td>
                            <td class="d-none d-md-table-cell">@user.Email</td>
                            <td class="table-action">
                                <a asp-area="Admin" asp-page-handler="edit" asp-route-Id="@user.Id" class="btn btn-success btn-sm text-white"> Edit </a>
                                <button type="submit" asp-page-handler="delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm"> Delete</button>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>


</div>


