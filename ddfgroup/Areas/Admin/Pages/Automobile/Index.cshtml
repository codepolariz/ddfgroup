@page
@model ddfgroup.Areas.Admin.Pages.Automobile.IndexModel

@{
    ViewData["Title"] = "Manage Cars";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="main">

    <partial name="_AdminPartialTopNav" />

    <div class="padding-left"><h3>@ViewData["Title"]</h3></div>

    <div class="row">

        <div class="col-12 col-xl-12 pad-grid">

            <div class="heads-padding text-right">
                <a asp-page="Create" asp-route-id="" class="btn btn-info btn-sm"> Create New</a>
            </div>
            <div class="text-success"> </div>
            <table class="table table-striped table-bordered" id="RsTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Name")
                        </th>
                        <th>
                            @Html.DisplayName("Price")
                        </th>
                        <th>
                            @Html.DisplayName("Mileage")
                        </th>
                        <th>
                            @Html.DisplayName("Ext. Color")
                        </th>
                        <th>
                            @Html.DisplayName("Uploaded Date")
                        </th>
                        <th>
                            @Html.DisplayName("Model")
                        </th>
                        <th>
                            @Html.DisplayName("Status")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Cars)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mileage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExteriorColor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UploadedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModelName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CarStatus.StatusName)
                            </td>
                            <td>
                                <a class="btn btn-outline-info btn-sm" asp-page="./Edit" asp-route-id="@item.Id"><i class="fa fa-edit fa-1x"></i></a>
                                <a class="btn btn-outline-success btn-sm" asp-page="./Details" asp-route-id="@item.Id"><i class="fa fa-search fa-1x"></i></a>
                                <a class="btn btn-outline-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id"><i class="fa fa-trash fa-1x"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
