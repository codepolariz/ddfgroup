@page
@model ddfgroup.Areas.Admin.Pages.Comments.DetailsModel

@{
    ViewData["Title"] = "Comment Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="main">

    <partial name="_AdminPartialTopNav" />

    <div class="padding-left"><h3>@ViewData["Title"] - @Model.Feedback.Name</h3></div>

    <div class="row ds-content">

        <div class="col-12 col-xl-12 pad-grid">
          
            <div class="heads-padding text-right">
                <a class="btn btn-success" asp-page="./Index">Back to List</a>
                </div>

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Feedback.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Feedback.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Feedback.EmailAddress)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Feedback.EmailAddress)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Feedback.MobileNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Feedback.MobileNumber)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Feedback.Comment)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Feedback.Comment)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
        
