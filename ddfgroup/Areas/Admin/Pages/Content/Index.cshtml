@page
@model ddfgroup.Areas.Admin.Pages.Content.IndexModel

@{
    ViewData["Title"] = "Manage Contents";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="main">

    <partial name="_AdminPartialTopNav" />

    <div class="padding-left"><h3>@ViewData["Title"]</h3></div>

    <div class="row">

        <div class="col-12 col-xl-12 pad-grid">

            <div class="heads-padding text-right">
                <a asp-page="Create" asp-route-id="" class="btn btn-info btn-sm"> Create New</a>
            </div>

                <table class="table table-striped table-bordered" id="RsTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.PageContents[0].PageTitle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PageContents[0].PageContent)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PageContents)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PageTitle)
                                </td>

                                <td>
                                    <a class="btn btn-outline-info" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-outline-success" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


