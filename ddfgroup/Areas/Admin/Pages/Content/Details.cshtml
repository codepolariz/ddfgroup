@page
@model ddfgroup.Areas.Admin.Pages.Content.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="main ">
    <partial name="_AdminPartialTopNav" />

    <div class="main-body">

        <div class="padding-left"><h3>@ViewData["Title"] - @Model.PageContents.PageTitle</h3></div>

        <div class="row">

            <div class="col-12 col-xl-12 ">

                <div class="heads-padding text-right">
                    <a asp-page="Index" asp-route-id="" class="btn btn-info btn-sm"> Manage Pages</a>
                    <a asp-page="Create" asp-route-id="" class="btn btn-success btn-sm"> Create Page</a>
                </div>
            </div>


            <div class="col-md-12 col-xl-12 col-lg-12 ds-content pad-grid">

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PageContents.PageTitle)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PageContents.PageTitle)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PageContents.PageContent)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PageContents.PageContent)
                    </dd>
                </dl>
            </div>
            </div>
</div>
    </div>
