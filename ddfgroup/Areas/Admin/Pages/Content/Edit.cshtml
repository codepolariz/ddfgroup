@page
@model ddfgroup.Areas.Admin.Pages.Content.EditModel

@{
    ViewData["Title"] = "Edit Page";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}


<div class="main ">
    <partial name="_AdminPartialTopNav" />

    <div class="main-body">

        <div class="padding-left"><h3>@ViewData["Title"]</h3></div>

        <div class="row">

            <div class="col-12 col-xl-12 ">

                <div class="heads-padding text-right">
                    <a asp-page="Index" asp-route-id="" class="btn btn-success btn-sm"> Manage Pages</a>
                </div>
            </div>


            <div class="col-md-12 col-xl-12 col-lg-12 ds-content pad-grid">

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PageContents.Id" />
                    <div class="form-group">
                        <label asp-for="PageContents.PageTitle" class="control-label"></label>
                        <input asp-for="PageContents.PageTitle" class="form-control" />
                        <span asp-validation-for="PageContents.PageTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(m => m.PageContents.PageContent, new
                   {
                       rows = "17",
                       style = "resize:none;width:95%; margin:auto; background-color:#FFF",
                       placeholder = Html.DisplayNameFor(m => m.PageContents.PageContent),
                       @class = "form-control input-lg textarea-editor"
                   })
                        <span asp-validation-for="PageContents.PageContent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>
        

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
