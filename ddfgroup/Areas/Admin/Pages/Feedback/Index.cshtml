@page
@model ddfgroup.Areas.Admin.IndexModel

@{
    ViewData["Title"] = "Feedbacks";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="main ">

    <partial name="_AdminPartialTopNav" />

    <div class="padding-left"><h3>@ViewData["Title"]</h3></div>

    <div class="row">

        <div class="col-12 col-xl-12 pad-grid ds-content">

            <div class="heads-padding text-right">
                <a asp-page="Index" asp-route-id="" class="btn btn-info btn-sm"> Manage Feedbacks</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Feedback[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Feedback[0].EmailAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Feedback[0].MobileNumber)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Feedback)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MobileNumber)
                            </td>

                            <td>
                                <a class="btn btn-warning" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
    </div>
 </div>
