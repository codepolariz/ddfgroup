            <div class="car___details__Container">

                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        @{
                            int count = 0;
                            string ActiveClass ="";
                            foreach (var img in Model.Images)
                            {
                                if (count == 0) { ActiveClass = "active"; }
                                <li data-target="#carouselExampleIndicators" data-slide-to="@count" class="@ActiveClass"></li>
                                count++;
                            }

                            }
                            </ol>
                    <div class="carousel-inner">
                        @{ 
                            int counter = 0;
                            var CssClass = "carousel-item active";
                            foreach (CarImages img in Model.Images)
                            { 
                                if (counter == 0) { CssClass = "carousel-item active"; } else { CssClass = "carousel-item"; }

                        <div class="@CssClass" >
                            <img class="d-block w-100" src="~/upload/@Html.DisplayFor(model => model.Cars.ThumbFolderName)/thumbs/@img.ImagesName" alt="First slide">
                        </div>
                                counter++;
                            }

                            }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>

