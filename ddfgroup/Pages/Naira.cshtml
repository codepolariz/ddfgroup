@page
@model ddfgroup.Pages.NairaModel
@{

    ViewData["Title"] = "Car Informatiopn";

}

<div class="sliderinner___container"></div>

<div class="container" style="background-color:#EFEFEF; padding:15px;">
    <div class="row">
        <div class="col-sm-12 col-lg-8 col-xl-8 col-md-8">
            <div class="car___details__Container">

                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        @{
                            int count = 0;
                            string ActiveClass = "";
                            foreach (var img in Model.Images)
                            {
                                if (count == 0) { ActiveClass = "active"; }
                                <li data-target="#carouselIndicators" data-slide-to="@count" class="@ActiveClass" ></li>
                                count++;
                            }

                        }
                    </ol>
                    <div class="carousel-inner">
                        @{
                            int counter = 0;
                            var CssClass = "carousel-item active";
                            foreach (CarImages img in Model.Images)
                            {
                                if (counter == 0) { CssClass = "carousel-item active"; } else { CssClass = "carousel-item"; }

                                <div class="@CssClass">
                                    <img class="d-block w-100" src="~/upload/@Html.DisplayFor(model => model.Cars.ThumbFolderName)/thumbs/@img.ImagesName" alt="First slide">
                                </div>
                                counter++;
                            }

                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" id="Indicator">
                        <span  class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next" id="Indicator">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">@Html.DisplayName("Brand") : @Html.DisplayFor(model => model.Cars.Brands.Name)</th>
                        <td>@Html.DisplayName("Model") : @Html.DisplayFor(model => model.Cars.ModelName)</td>
                        <td></td>
                        <td></td>
                    </tr>

                    <tr>
                        <th scope="row">@Html.DisplayName("Year") : @Html.DisplayFor(model => model.Cars.Year)</th>
                        <td>@Html.DisplayName("Price") : @Html.DisplayFor(model => model.Cars.Price)</td>
                        <td></td>
                        <td></td>
                    </tr>

                    <tr>
                        <th scope="row">@Html.DisplayName("Transmission") : @Html.DisplayFor(model => model.Cars.Transmissions.Name)</th>
                        <td>@Html.DisplayName("Title") : @Html.DisplayFor(model => model.Cars.CarTitle)</td>
                        <td></td>
                        <td></td>
                    </tr>

                    <tr>
                        <th scope="row">@Html.DisplayName("Mileage") : @Html.DisplayFor(model => model.Cars.Mileage)</th>
                        <td>@Html.DisplayName("Cylinder") : @Html.DisplayFor(model => model.Cars.Cylinder)</td>
                        <td></td>
                        <td></td>
                    </tr>

                    <tr>
                        <th scope="row">@Html.DisplayName("Doors") : @Html.DisplayFor(model => model.Cars.Doors)</th>
                        <td>@Html.DisplayName("Exterior Color") : @Html.DisplayFor(model => model.Cars.ExteriorColor)</td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row">@Html.DisplayName("Exterior Color") : @Html.DisplayFor(model => model.Cars.ExteriorColor)</th>
                        <td>@Html.DisplayName("Date Uploaded") : @Html.DisplayFor(model => model.Cars.UploadedDate)</td>
                        <td></td>
                        <td></td>
                    </tr>
            </table>
            @Html.Raw(ViewBag.Details)
        </div>

        <div class="col-sm-12 col-md-4 col-xl-4 col-lg-4 car__container__pricing">
            
                <h2> Price: @Html.DisplayFor(model=>model.Cars.PriceNaira)</h2>
            

            @Html.Raw(ViewBag.Content)
            <div class="Social-media">
                <img src="~/images/facebook.png" />
                <img src="~/images/twitter.jpg" />
                <img src="~/images/instagram.jpg" />
                <img src="~/images/watsapp.png" />
            </div>
        </div>
    </div>
</div>
